{% extends 'base.html.twig' %}

{% block body %}
    <h1>Blogpost</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ blogPost.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ blogPost.title }}</td>
            </tr>
            <tr>
                <th>Post</th>
                <td>{{ blogPost.post }}</td>
            </tr>
            <tr>
                <th>Dateadded</th>
                <td>{% if blogPost.dateAdded %}{{ blogPost.dateAdded|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>
    <ul>
        <li>
            <a href="{{ path('blog_index_public') }}">Back to the list</a>
        </li>
    </ul>
    
    <h1>Comment creation</h1>

    {{ form_start(form) }}
        {{ form_widget(form) }}
        <input type="submit" value="Create" />
    {{ form_end(form) }}
    
    <table>
        <tbody>
            <tr>
                <td colspan="2">
                    {{ comments|length }} comments.
                </td>
            </tr>
            {% for comment in comments %}
                <tr>
                    <td>
                        {{ comment.author }}
                    </td>
                    <td>
                        {{ comment.body }}
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}
